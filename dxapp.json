{
  "name": "chanjo_sambamba_coverage",
  "title": "coverage using sambamba and chanjo",
  "summary": "coverage using sambamba and chanjo",
  "tags": [
    "coverage"
  ],
  "properties": {
    "github release": "v1.2"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "sambamba_bed",
      "label": "sambamba_bed",
      "help": "A samamba bedfile.",
      "class": "file",
      "patterns": ["*.bed"]
    },
    {
      "name": "bamfile",
      "label": "bamfile",
      "help": "bam file.",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "bam_index",
      "label": "bamfile_index",
      "help": "bam index.",
      "class": "file",
      "patterns": ["*.bai"]
    }
  ],
  "outputSpec": [
    {
      "name": "chanjo_output",
      "label": "chanjo output",
      "help": "A csv file containing the coverage for each exoncoordinate-sorted BAM file with the resulting mappings.",
      "class": "array:file"
    }
  ],
  "runSpec": {
    "execDepends": [
      {
        "name": "bedtools"
      },
      {
        "name": "sqlite3"
      }
    ],
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x2"
      }
    },
    "file": "src/code.sh",
    "interpreter": "bash"
  }
}
